<header class="navbar navbar-fixed-top navbar-inverse" style="background-color: #ffffff; border-style: none;">
  <div class="container" style="background-color: #500000;">
      <!-- <div class="row">
        <div class="col-md-3" > </div>
        <div class="col-md-6" style="background-color: #500000;">  -->
          <nav>
            <a class="navbar-brand" href="/">
              <%=image_tag("logo.png", alt: "Logo", style:"height:150%")%>
            </a>
            <div id="navbar" class="navbar-collapse collapse">
              <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "Bingo",  current_user  %></li>
                <li><%= link_to "Help",   help_path  %></li>
                <% if logged_in? %>
                <li class="dropdown" id="accounts-dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <% if admin_user? %>
                    <li><%= link_to "Admin", rails_admin.dashboard_path %></li>
                    <% end %>
                    <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                    <li><%= link_to "Games", games_path %></li>
                    <li><%= link_to "Score Board", score_board_path %></li>
                    <li><%= link_to "Share", user_share_path(current_user.id) %></li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to "Log out", logout_path, method: :delete %>
                    </li>
                  </ul>
                </li>
                <% else %>
                  <li><%= link_to "Log in", login_path %></li>
                <% end %>
              </ul>
            </div>
          </nav>
        </div>
        <!-- <div class="col-md-3"> </div> -->
      </div>
  </div>
</header>
