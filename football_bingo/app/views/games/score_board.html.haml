= content_for(:title, "Score Board")
%br/

.row
  .col-md-8.col-md-offset-2
    .panel.panel-default
      .panel-heading
        %h3 Score Board
      .panel-body
        %table.table.table-hover#score-board
          %thead
            %tr
              %th &nbsp;Game&nbsp;&nbsp;&nbsp;
              %th &nbsp;Date&nbsp;&nbsp;&nbsp;
              %th &nbsp;Instant Winner&nbsp;
              %th &nbsp;Whoop Winner&nbsp;
              - if admin_user?
                %th &nbsp;Send Email?
          %tbody
            - @games.each do |game|
              %tr
                %td= game.game_name 
                %td= game.date
                %td
                  - if instant_winner?(game) 
                    = instant_winner(game).name
                %td 
                  - if whoop_winner?(game)
                    - gus = whoop_winners(game)
                    - gus.each do |gu|
                      %br/
                      = gu.user.name

                      / = whoop_winners(game).name
                - if admin_user?           
                  %td
                    - if whoop_winner?(game)
                      - gus = whoop_winners(game)
                      - gus.each do |gu|
                        = button_to 'Send', send_email_path(:whoop_winner_id => gu.user.id), class: "btn btn-primary maroon"