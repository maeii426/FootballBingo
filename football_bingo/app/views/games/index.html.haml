= content_for(:title, "Games")

%h2 All Games

.row
  .col-md-10.col-md-offset-1
    %table.table{:border => 2}
      %thead
        %tr
          %th Game
          %th Date
          %th Home Team
          %th Visiting Team
          %th Status
          %th Play Now?
          %th More Info
      %tbody
        - @games.each do |game|
          %tr
            %td= game.game_name 
            %td= game.date
            %td= game.hometeam
            %td= game.visteam
            %td= get_state(game)
            %td 
              - if game.ongoing? 
                = button_to 'Play!', user_game_join_path(current_user, game)
              - elsif game.upcoming?
                Wait ..
              - else
                = link_to '<button type="button">Check play history</button>'.html_safe, user_game_play_path(current_user, game)
            %td= link_to "More about #{game.game_name}", game_path(game)