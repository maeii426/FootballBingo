<% provide(:title, "List all the bingo cards in one game") %>
<h1>Show all the cards associated with this game</h1>
<p>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
  	 <% if @current_game.ongoing? %>
     <h4> <%= link_to '<button type="button">Get a new card!</button>'.html_safe, user_game_get_new_card_path(current_user, @current_game) %>
     <%= link_to '<button type="button">Get a whoop card!</button>'.html_safe, user_game_get_whoop_card_path(current_user, @current_game) %>
     <% end %>  
     <%= link_to '<button type="button">Return to Profile</button>'.html_safe, user_path(current_user) %> 
     </h4>
  </div>
 </div> 
</p>
  <% if @current_game.ongoing? %>
  <h4>
    <%= link_to '<button type="button">Do I Win?</button>'.html_safe, check_win_path() %>
  </h4>
  <% end %> 
<% @cards.each do |card| %>
<% show_card(card) %>
<%= render 'cards/card'%>
<% end %>