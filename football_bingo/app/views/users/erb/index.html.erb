<% provide(:title, "Users") %>

<h2> All Users

<table class="users">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Delete?</th>
    </tr>
  </thead>
<tbody>

<% @users.each do |user| %>
<tr>
  <td><%= user.name%></td>
  <td><%= user.email%></td>
  <td><%=link_to '<button type="button">Delete</button>'.html_safe, user_path(user.id), :method => :delete %></td>
</tr>
<% end %>

</tbody>
</table>